{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true
  },
  "include": ["impact-app/src", "impact-debugger/src"],
  "exclude": [
    "node_modules",
    "impact-app/dist",
    "impact-debugger/dist",
    "tests"
  ]
}
